##############################################################################################################
# Terraform state
##############################################################################################################
terraform {
  required_version = ">= 0.12"
  required_providers {
    fortios = {
      source = "fortinetdev/fortios"
    }
  }
}

##############################################################################################################
# Deployment in AWS
##############################################################################################################
provider "aws" {
  access_key = var.access_key
  secret_key = var.secret_key
  region     = local.region["id"]
  # Uncomment if using AWS SSO:
  # token      = var.token
}

# Access and secret keys to your environment
variable "access_key" {}
variable "secret_key" {}

##############################################################################################################
# Deployment in Github
##############################################################################################################
provider "github" {
  token = var.token
}

variable "token" {}

##############################################################################################################
# DockerHub variables
##############################################################################################################
variable "dockerhub_token" {}


##############################################################################################################
# FortiOS variables
##############################################################################################################
provider "fortios" {
  hostname = local.fgt_secrets["HOST"]
  token    = local.fgt_secrets["TOKEN"]
  insecure = "true"
}
